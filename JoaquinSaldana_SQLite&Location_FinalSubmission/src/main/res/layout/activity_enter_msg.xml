<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/enterMsgLayout"
    android:orientation="vertical"
    tools:context="com.example.jq.android_sqlitelocation.enterMsg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/topPaneLayout">

        <Button
            android:id="@+id/deleteList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete List" />

        <Button
            android:id="@+id/submitMsgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enterMsgWindow"
            android:text="Submit Message" />


        <EditText
            android:id="@+id/enterMsgWindow"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="@string/enterMessage" />

    </LinearLayout>

    <ListView
        android:id="@+id/sql_listView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/topPaneLayout">
    </ListView>


</RelativeLayout>
