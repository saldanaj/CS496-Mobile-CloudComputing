<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jq.app_code.createHuman">


    <EditText
        android:id="@+id/humanNameInput"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:inputType="text"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="Human Name"/>

    <EditText
        android:id="@+id/humanAgeInput"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:inputType="text"
        android:layout_gravity="center"
        android:layout_below="@+id/humanNameInput"
        android:layout_centerHorizontal="true"
        android:hint="Human Age"/>

    <EditText
        android:id="@+id/humanFavoriteParkInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_gravity="center"
        android:layout_below="@+id/humanAgeInput"
        android:layout_centerHorizontal="true"
        android:hint="Favorite Park"/>

    <Button
        android:id="@+id/submitHummanInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Human/Owner"
        android:layout_below="@+id/humanFavoriteParkInput"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

