<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jq.app_code.humanInformation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/modifyHumanButton"
            android:layout_alignStart="@+id/modifyHumanButton"
            android:layout_below="@+id/modifyHumanButton"
            android:layout_marginTop="54dp"
            android:text="Human Name:     " />

        <Button
            android:id="@+id/modifyHumanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/te"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/te"
            android:layout_toRightOf="@+id/te"
            android:text="Modify Info" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/te"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="Delete Human" />


        <TextView
            android:id="@+id/humanNameTxtViewBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/modifyHumanButton"
            android:layout_toRightOf="@+id/modifyHumanButton" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="30dp"
            android:text="Age: " />

        <TextView
            android:id="@+id/humanAgeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/humanNameTxtViewBox"
            android:layout_alignStart="@+id/humanNameTxtViewBox"
            android:layout_alignTop="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="28dp"
            android:text="Favorite Park:     " />

        <TextView
            android:id="@+id/humanFavParkTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/humanAgeTxtView"
            android:layout_alignStart="@+id/humanAgeTxtView"
            android:layout_alignTop="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humanFavParkTxtView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Dogs Owned" />

    </RelativeLayout>


    <ListView
        android:id="@+id/dogListHumanInfo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />


</RelativeLayout>
